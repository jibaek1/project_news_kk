<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssr.newskuku.domain.news.mapper.NewsCommentMapper">

    <resultMap id="NewsCommentResultMap" type="com.ssr.newskuku.domain.news.dto.NewsCommentDTO">
        <id property="id" column="comment_id" />
        <result property="newsId" column="news_id" />
        <result property="userId" column="user_id" />
        <result property="content" column="content" />
        <result property="userName" column="user_name" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!-- 뉴스별 댓글 목록 조회 -->
    <select id="findByNewsId" resultMap="NewsCommentResultMap">
        SELECT
            c.comment_id,
            c.news_id,
            c.user_id,
            c.content,
            ui.nickname AS user_name,
            c.created_at,
            c.updated_at
        FROM
            news_comment c
                JOIN
            user_info ui ON c.user_id = ui.user_info_id
        WHERE
            c.news_id = #{newsId}
        ORDER BY
            c.created_at ASC
    </select>

    <!-- 댓글 단일 조회 -->
    <select id="findById" resultMap="NewsCommentResultMap">
        SELECT
            c.comment_id,
            c.news_id,
            c.user_id,
            c.content,
            ui.nickname AS user_name,
            c.created_at,
            c.updated_at
        FROM
            news_comment c
                JOIN
            user_info ui ON c.user_id = ui.user_info_id
        WHERE
            c.comment_id = #{id}
    </select>

    <!-- 댓글 작성 -->
    <insert id="insert" parameterType="com.ssr.newskuku.domain.news.dto.NewsCommentDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO news_comment(news_id, user_id, content)
        VALUES (#{newsId}, #{userId}, #{content})
    </insert>

    <!-- 댓글 수정 -->
    <update id="update" parameterType="com.ssr.newskuku.domain.news.dto.NewsCommentDTO">
        UPDATE news_comment
        SET content = #{content},
            updated_at = CURRENT_TIMESTAMP
        WHERE comment_id = #{id}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="delete">
        DELETE FROM news_comment
        WHERE comment_id = #{id}
    </delete>

</mapper>